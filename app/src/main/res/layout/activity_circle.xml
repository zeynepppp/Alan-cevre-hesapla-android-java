<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".circle"
    android:background="@drawable/squarepageback">

    <EditText
        android:id="@+id/yaricap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp"
        android:ems="10"
        android:hint="Yarıçap girin"
        android:inputType="number"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/DaireBaslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="DAİRE"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="34sp"
        android:inputType="number"/>

    <CheckBox
        android:id="@+id/cbDAlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/yaricap"
        android:layout_marginTop="221dp"
        android:text="Alan"
        android:visibility="visible"
        tools:text="Alan" />

    <CheckBox
        android:id="@+id/cbDCevre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/yaricap"
        android:layout_centerVertical="true"
        android:text="Çevre" />

    <CheckBox
        android:id="@+id/cbDHacim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/yaricap"
        android:layout_marginBottom="217dp"
        android:text="Hacim" />


    <TextView
        android:id="@+id/tvDAlan"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_alignBottom="@+id/cbDAlan"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="161dp"
        android:text=" "
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvDCevre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvDAlan"
        android:layout_centerVertical="true"
        android:text=" "
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvDHacim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvDAlan"
        android:layout_alignTop="@+id/cbDHacim"
        android:text=" "
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_daire"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="78dp"
        android:background="@drawable/buttonshape"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="100"
        android:text="Hesapla"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />


</RelativeLayout>