<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".circle"
    android:background="@drawable/squarepageback">

    <EditText
        android:id="@+id/dikmeuzunluk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp"
        android:ems="10"
        android:hint="Kenar girin"
        android:inputType="number"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txtBaslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="KARE"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="34sp"
        android:inputType="number"/>

    <CheckBox
        android:id="@+id/cbAlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/dikmeuzunluk"
        android:layout_marginTop="217dp"
        android:text="Alan" />

    <CheckBox
        android:id="@+id/cbCevre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/dikmeuzunluk"
        android:layout_centerVertical="true"
        android:text="Ã‡evre" />

    <CheckBox
        android:id="@+id/cbHacim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/dikmeuzunluk"
        android:layout_marginBottom="214dp"
        android:text="Hacim" />

    <TextView
        android:id="@+id/tvAlan"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_alignEnd="@+id/txtBaslik"
        android:layout_alignTop="@+id/cbAlan"
        android:layout_marginTop="2dp"
        android:text=" " />

    <TextView
        android:id="@+id/tvCevre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtBaslik"
        android:layout_centerVertical="true"
        android:text=" " />

    <TextView
        android:id="@+id/tvHacim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtBaslik"
        android:layout_alignTop="@+id/cbHacim"
        android:text=" "
        android:visibility="visible" />

    <Button
        android:id="@+id/angry_btn"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="78dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Hesapla"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />


</RelativeLayout>
