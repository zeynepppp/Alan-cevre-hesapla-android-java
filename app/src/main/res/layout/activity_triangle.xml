<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".circle"
    android:background="@drawable/squarepageback">

    <EditText
        android:id="@+id/dikmekenari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="239dp"
        android:ems="10"
        android:hint="Dikme İnen Kenar"
        android:inputType="number"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/dikmeuzunluk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="229dp"
        android:ems="10"
        android:hint="Dikme Uzunluğu"
        android:inputType="number"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/kenar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:ems="10"
        android:hint="Birinci kenar"
        android:inputType="number"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/kenar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="183dp"
        android:ems="10"
        android:hint="İkinci kenar"
        android:inputType="number"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txtBaslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:inputType="number"
        android:text="ÜÇGEN"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="34sp" />

    <CheckBox
        android:id="@+id/cbUAlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/dikmekenari"
        android:layout_marginBottom="179dp"
        android:text="Alan" />

    <CheckBox
        android:id="@+id/cbUCevre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/dikmekenari"
        android:layout_marginBottom="137dp"
        android:text="Çevre" />

    <TextView
        android:id="@+id/tvUAlan"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_alignBaseline="@+id/cbUAlan"
        android:layout_alignStart="@+id/tvUCevre"
        android:text=" " />

    <TextView
        android:id="@+id/tvUCevre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cbUCevre"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="155dp"
        android:text=" " />

    <Button
        android:id="@+id/angry_btn"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Hesapla"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />


</RelativeLayout>